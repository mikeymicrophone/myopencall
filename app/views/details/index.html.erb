<h1>Listing details</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Subject type</th>
    <th>Subject</th>
  </tr>

<% @details.each do |detail| %>
  <tr>
    <td><%=h detail.content %></td>
    <td><%=h detail.subject_type %></td>
    <td><%=h detail.subject_id %></td>
    <td><%= link_to 'Show', detail %></td>
    <td><%= link_to 'Edit', edit_detail_path(detail) %></td>
    <td><%= link_to 'Destroy', detail, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New detail', new_detail_path %>