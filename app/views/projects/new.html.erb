<h1>list a project</h1>

<% form_for @project do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.wysihat_editor :description, :size => '60x5' %>
  </p>
  <p>
    <%= f.submit 'save' %>
  </p>
<% end %>

<%= link_to 'Back', projects_path %>