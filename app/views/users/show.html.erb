<p class='name'>
  <%=h @user.name %>
</p>

<h1>
  <%=h @user.login %>
</h1>

<%= link_to_function 'tell us a detail!' %>
<% form_for @user.details.new do |f| %>
  <%= f.wysihat_editor :content %>
  <%= f.submit :save %>
  <%= f.check_box :private %>
  <%= f.label :private, '(privately)' %>
  <%= f.hidden_field :subject_type %>
  <%= f.hidden_field :subject_id %>
<% end %>

<% @user.details.public.each do |d| %>
  <% div_for d do %>
    <%= d.content %>
  <% end %>
<% end %>

<%= link_to '[edit]', edit_user_path(@user) if @user == current_user %>