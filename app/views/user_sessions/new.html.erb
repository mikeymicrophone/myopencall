<h1>be in</h1>

<% form_for @user_session do |f| %>
  <%= f.error_messages %>
  <%= f.label :login, 'your name' %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label :password, 'your word' %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me, 'Oh, you remembered me?!'%><br />
  <br />
  <%= f.submit "go" %>
<% end %>
<%= link_to "I'm new", new_user_path %><br>
