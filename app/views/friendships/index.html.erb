<h1>
  <% if @user %>
    <% if @user == current_user %>
       your
    <% else %>
      <%= @user.name %>'s
    <% end %>
  <% end %>
  
  friends</h1>

<table>

<% @friendships.each do |friendship| %>
  <tr>
    <% if @user %>
      <td><%= @user == friendship.accepter ? friendship.requester.name : friendship.accepter.name %></td>
    <% end %>
    <td><%= link_to '[show]', friendship %></td>
  </tr>
<% end %>
</table>

