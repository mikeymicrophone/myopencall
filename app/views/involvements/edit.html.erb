<h1>describe <%= @involvement.participant.name %>'s involvement</h1>

<% form_for(@involvement) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'describe' %>
  </p>
<% end %>

<%= link_to '[remove]', @involvement, :method => :delete %>