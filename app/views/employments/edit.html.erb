<h1>Editing employment</h1>

<% form_for(@employment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :company_id %><br />
    <%= @employment.company.name %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= @employment.user.name %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @employment %> |
<%= link_to 'Back', employments_path %>