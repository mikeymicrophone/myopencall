<h1>Change My Password</h1>

<% form_for @user, :class => "display_form", :url => password_reset_path, :method => :put do |f| %>
  <%= f.error_messages %>
  <%= f.label :password %>
  <%= f.password_field :password %><br />
  <br />
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br />
  <br />
  <div class="btn_wrap">
    <%= f.submit "Update my password and log me in", :class => "submit_button" %>
  </div>
<% end %>